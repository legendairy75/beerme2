<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <form action="/register" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <lable class="form-lable" for="username">Username</lable>
        <input type="text" class="form-control" id="username" name="username" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <lable class="form-lable" for="email">Email</lable>
        <input type="email" class="form-control" id="email" name="email" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <lable class="form-lable" for="password">Password</lable>
        <input type="password" class="form-control" id="password" name="password" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <button class="btn btn-success">Register</button>
    </form>
  </div>
</div>
