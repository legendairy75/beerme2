<% layout('layouts/boilerplate') %>

    <% for (let post of posts) { %>
    <div class="card text-center mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if (post.image.length) { %>
            <img class="img-fluid rounded" alt="" src="<%= post.image[0].url %>">
          <% }else{ } %>

        </div>
        <div class="col-md">
          <div class="card-body">

            <h2 class="card-title"><%= post.title %></h2>
            <p class="card-text"><%= post.description %></p>
            <div class="d-grid gap-2 col-6 mx-auto">
              <a class="btn btn-primary btn-lg rounded-pill" href="/posts/<%=post._id%>">View</a>
            </div>
            
    </div>
        </div>
      </div>
    </div>
    
    <% } %>
