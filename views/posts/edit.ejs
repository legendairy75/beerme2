<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-6 offset-3">
      <form action="/posts/<%=post._id%>?_method=PUT" method='POST' enctype="multipart/form-data">
        <div class="mb-3">
        <lable class="form-lable" for="title">Title</lable>
        <input class="form-control" type="text" id="title" name="post[title]" value="<%=post.title %>"required>
        <div class="valid-feedback">
            looks good!
          </div>
      </div>
      <div class="mb-3">
        <lable class="form-lable" for="desc">Description</lable>
        <input class="form-control" type="text" id="desc" name="post[description]" value="<%=post.description %>"required>
        <div class="valid-feedback">
            looks good!
          </div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
            <input type="file" class="form-file-input" id="image" name="image" >
            <label class="form-file-label" for="image">
                <span class="form-file-text custom-file-label">Add image...</span>
                <span class="form-file-button">Browse</span>
            </label>
        </div>
      </div>
      <div class="mb-3">
        <lable class="form-lable" for="body">Body</lable>
        <!-- <input type="text" id="body" name="posts[body]"> -->
        <textarea class="form-control" name="post[body]" id="body"required ><%=post.body %></textarea>
        <div class="valid-feedback">
            looks good!
          </div>
      </div>
      <button class="btn btn-success">Submit</button>
      </form>
      <div class="col mt-3">
       <a class="btn btn-primary" href="/posts">Index</a>
       <a class="btn btn-secondary" href="/posts/<%=post._id%>">Back</a>
      </div>

    </div>
  </div>
