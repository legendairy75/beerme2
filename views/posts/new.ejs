<% layout('layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-6 offset-3">

    <form action="/posts" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

        <div class="mb-3">
          <lable class="form-lable" for="title">Title</lable>
          <input class="form-control" type="text" id="title" name="post[title]" required>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>
        <div class="mb-3">
          <lable class="form-lable" for="desc">Description</lable>
          <input class="form-control" type="text" id="desc" name="post[description]"required>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>
        <div class="mb-3">
          <div class="form-file custom-file">
              <input type="file" class="form-file-input" id="image" name="image" >
              <label class="form-file-label" for="image">
                  <span class="form-file-text custom-file-label">Choose image...</span>
                  <span class="form-file-button">Browse</span>
              </label>
          </div>
        </div>
        <div class="mb-3">
          <lable class="form-lable" for="body">Body</lable>
          <!-- <input type="text" id="body" name="posts[body]"> -->
          <textarea class="form-control" name="post[body]" id="body"required></textarea>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>

        <button class="btn btn-primary">Post</button>

      </form> 
      <div class="col mt-3">
        <a class="btn btn-secondary" href="/posts">Back</a>
      </div>

  </div>
</div>

